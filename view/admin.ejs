    <div class="container">
        <div class="row data-box">
            <div class="data-table col-sm-8 mt-4">
                <h3 class="head-text text-center alert alert-success">Registered client</h3>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Phone</th>
                        </tr>
                    </thead>
                    <tbody class="table-group-divider">
                        <% var i=1 %>
                            <% data.forEach((item)=>{ %>

                                <tr>
                                    <th scope="row">
                                        <%= i++ %>
                                    </th>
                                    <td>
                                        <%= item.name %>
                                    </td>
                                    <td>
                                        <%= item.email %>
                                    </td>
                                    <td>
                                        <%=item.phone %>
                                    </td>
                                   
                                </tr>
                                <% }) %>
                    </tbody>
                </table>
            </div>
            <div class="data-table col-sm-3 mt-4">
                <h3 class="head-text text-center alert alert-warning">Subscribers</h3>
                <table class="table table-primary table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Email</th>
                        </tr>
                    </thead>
                    <tbody class="table-group-divider">

                        <tr>
                            <th scope="row">1</th>
                            <td>email</td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>

        <div class="row">
            <h3 class="head-text text-center alert alert-primary">Event registrations</h3>

        </div>


        <style>
            
            .data-table{
                padding: 5px 4px;
                margin: 1px;
                box-shadow: rgba(0, 0, 0, 0.16) 0px 3px 6px, rgba(0, 0, 0, 0.23) 0px 3px 6px;
            }
        </style>
